{
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useButtonType": "off",
        "noLabelWithoutControl": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noRedeclare": "warn"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/__tests__/**"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
